/* pages/search/search.wxss */
.searchContainer {
  padding: 0 20rpx;
}
.header {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;  
  padding: 10rpx 0;
}
.searchInput {
  flex: 1;
  background-color: rgba(32, 32, 32, 0.5);
  border-radius: 30rpx;
  padding-top: 8rpx;
  position: relative;
}
.cancel {
  width: 100rpx;
  text-align: center;
}
.searchInput .searchIcon {
  position: absolute;
  left: 15rpx;
  top: 2rpx;
  width: 50rpx;
  height: 50rpx;
}
.searchInput input {
  padding-left: 60rpx;
}
.placeholder {
  text-align: center;
}
.searchInput .clear{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 28rpx;
  z-index: 99;
}

/* 热搜榜 */
.hotContainer .title {
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  font-size: 32rpx;
  color: #c71f1f;
  font-weight: 700;
  margin-right: 10rpx;
}
.hotItem .icon {
  width: 35rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

/* 搜索内容 */
.showSearchContent {
  background-color: rgba(32, 32, 32, 0.5);
  font-size: 24rpx;
  padding: 0 10rpx;
}
.searchContent {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  flex: 1;
  /* border-bottom: 1rpx solid #f1f1f1; */
  padding-left: 10rpx;
}

/* 历史记录 */
.history {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
  position: relative;
}
.history .title {
  width: 100%;
  font-size: 28rpx;
}
.historyItem {
  font-size: 24rpx;
  background-color: rgba(32, 32, 32, 0.5);
  margin: 10rpx 20rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}
.delete {
  position: absolute;
  bottom: 12rpx;
  right: 0;
  font-size: 28rpx;
}