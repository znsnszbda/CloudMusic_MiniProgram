/* pages/index/index.wxss */

/* 轮播图区域 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}

/* 导航栏区域 */
.navContainer {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.navItem {
  flex: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  background-color: #8a1313;
  text-align: center;
  font-size: 50rpx;
  margin: 20rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
  margin: 30rpx 20rpx;
  font-size: 32rpx;
}
  /* 滑动图区域 */
.recommendScroll {
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.scrollItem text {
  margin-top: 5rpx;
  font-size: 22rpx;
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 排行榜区域 */
.topList {
  margin: 0 20rpx;
  height: 700rpx;
}
.topListSwiper {
  height: 450rpx;
}
.swiperItem {
  width: 96%;
  height: 440rpx;
  background-color: #5a5a5a;
  border-radius: 8rpx;
  padding-left: 10rpx;
}
.topListSwiper .title {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.musicItem {
  display: flex;
  margin-bottom: 20rpx; 
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
}
.musicItem .musicName {
  /* width: 100rpx;  */
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
